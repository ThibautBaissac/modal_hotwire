<div id="<%= dom_id post %>">
  <div class="d-flex justify-content-between">
    <div>
      <p><strong>Title:</strong> <%= post.title %></p>
      <p><strong>Body:</strong> <%= post.body %></p>
    </div>
    <div>
      <p><strong>Created at:</strong> <%= post.created_at.strftime("%b %e, %l:%M %p") %></p>
    </div>
  </div>
<hr>
